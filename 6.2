#include <iostream>
using namespace std;
int main() {
    int n;
    cout << "Enter N: ";
    cin >> n;
    if (n < 1 || n > 100) {
        cout << "N must be from 1 to 100\n";
        return 1;
    }
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i + j < n - 1)
                cout << 0;
            else if (i + j == n - 1)
                cout << 1;
            else
                cout << 2;
            if (j < n - 1) cout << " ";
        }
        cout << "\n";
    }
    return 0;
}
